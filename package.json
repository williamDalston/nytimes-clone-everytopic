{
  "name": "everytopic-site-factory",
  "version": "1.0.0",
  "description": "Static site generator for niche news sites",
  "main": "generator/build.js",
  "scripts": {
    "build": "node generator/build.js",
    "deploy": "node generator/deploy.js",
    "generate": "node generator/content.js",
    "bulk": "node generator/bulk.js",
    "report": "node generator/report.js",
    "check": "node generator/check.js",
    "health": "node generator/health-report.js",
    "health:export": "node generator/health-report.js --export",
    "check:report": "node generator/check.js --report",
    "test": "node tests/quality.test.js && node tests/seo.test.js",
    "test:quality": "node tests/quality.test.js",
    "test:seo": "node tests/seo.test.js"
  },
  "keywords": [
    "static-site-generator",
    "news",
    "seo"
  ],
  "author": "EveryTopic",
  "license": "ISC",
  "dependencies": {
    "openai": "^4.20.0",
    "dotenv": "^16.3.1",
    "@google/generative-ai": "^0.2.0"
  }
